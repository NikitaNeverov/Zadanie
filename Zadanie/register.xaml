<Window x:Class="Zadanie.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie"
        mc:Ignorable="d"
        Title="Registration" Height="370" Width="300" FontSize="14" Background="Aquamarine" >
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Registration" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator/>
            <Label Content="Username" Foreground="White"/>
            <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Password" Foreground="White"/>
            <PasswordBox Name="txtPasswor" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Confirm password" Foreground="White"/>
            <PasswordBox Name="txtCpnfirmPasswor" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button Name="btnRegister" Content="Register" Margin="60 10" Background="#545d6a" Foreground="White" FontSize="18" Click="btnRegister_Click"/>
        </StackPanel>
    </Border>

</Window>
